<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="
    background-color: @WorkflowEvents.Models.SessionHelper.CurrentUser.ColorCode;
    border-color:  @WorkflowEvents.Models.SessionHelper.CurrentUser.ColorCode;
">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (WorkflowEvents.Models.SessionHelper.CurrentUser.UserLoginID > 0)
                    {
                        <li>@Html.ActionLink("Home", "Home", "Dashboard")</li>

                        if (WorkflowEvents.Models.SessionHelper.CurrentUser.RoleName == "Admin")
                        {

                            <li>@Html.ActionLink("Admin Menu ", "Task", "Dashboard")</li>
                        }

                        if (WorkflowEvents.Models.SessionHelper.CurrentUser.RoleName == "HR")
                        {
                            <li>@Html.ActionLink("HR Menu", "Task", "Dashboard")</li>
                        }

                        <li>@Html.ActionLink("Profile", "Profile", "Dashboard")</li>
                        <li>@Html.ActionLink("Logout", "SignOut", "Dashboard")</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        <li>@Html.ActionLink("Reg", "Registeration", "User")</li>
                        <li>@Html.ActionLink("Login", "Login", "User")</li>
                    }




                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
